{
   "name": "blockcore-documentation",
   "version": "1.0.0",
   "description": "Blockcore Official Documentation",
   "author": "Blockcore",
   "license": "MIT",
   "bugs": "https://github.com/block-core/documentation/issues",
   "homepage": "https://github.com/block-core/documentation",
   "repository": {
      "type": "git",
      "url": "git+https://github.com/block-core/documentation.git"
   },
   "keywords": [
      "blockcore"
   ],
   "config": {
      "dist": "docs/.vuepress/dist",
      "port": "8080",
      "linkcheck": {
         "excludes": "--exclude btcpayserver-doc/edit/master/docs --exclude directory.btcpayserver.org --exclude foundation.btcpayserver.org --exclude install.btcpayserver.org --exclude drupal.org --exclude dyn.com --exclude facebook.com --exclude linkedin.com --exclude luxnode.io --exclude pi-hole.net --exclude t.me --exclude wiki.ion.radar.tech"
      }
   },
   "scripts": {
      "prestart": "rimraf -rf $npm_package_config_dist",
      "start": "vuepress dev docs -p $npm_package_config_port",
      "build": "vuepress build docs",
      "test": "jest",
      "linkcheck": "start-server-and-test linkcheck:serve $npm_package_config_port linkcheck:local",
      "linkcheck:serve": "serve -p $npm_package_config_port $npm_package_config_dist",
      "linkcheck:local": "blc -ro --filter-level 2 --requests 1 http://localhost:$npm_package_config_port $npm_package_config_linkcheck_excludes",
      "linkcheck:prod": "blc -ro --filter-level 2 --requests 1 https://docs.btcpayserver.org $npm_package_config_linkcheck_excludes",
      "predeploy": "./prepare-deployment.sh"
   },
   "devDependencies": {
      "rimraf": "3.0.2",
      "@vuepress/plugin-back-to-top": "1.5.1",
      "broken-link-checker": "^0.7.8",
      "jest": "26.0.1",
      "markdown-it-implicit-figures": "0.10.0",
      "serve": "11.3.2",
      "start-server-and-test": "1.11.0",
      "vuepress": "1.5.1",
      "vuepress-plugin-clean-urls": "1.1.1",
      "vuepress-plugin-code-copy": "1.0.6",
      "vuepress-plugin-medium-zoom": "1.1.8"
   }
}
